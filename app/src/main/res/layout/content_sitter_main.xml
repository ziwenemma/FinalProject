<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageSitter"
    tools:showIn="@layout/toolbar"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="MyPostProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:id="@+id/texttitle"
        android:gravity="center"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/texttitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cardview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:layout_constraintBottom_toTopOf="@+id/bottom_menusitter">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="622dp">

            <ImageView
                android:id="@+id/sitter_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image_person" />

            <TextView
                android:id="@+id/sittername"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sitter_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="274dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sitter_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sitter_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="217dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="31dp"
                android:layout_toRightOf="@+id/sittername"
                android:background="#ccccff"
                android:gravity="center"
                android:text="Emma"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/age_de"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sitter_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="273dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Age:"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/babysitte_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sittername"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="217dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="31dp"
                android:layout_toRightOf="@+id/age_de"
                android:background="#ccccff"
                android:gravity="center"
                android:text="40"
                android:textColor="#000000"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/sittercity"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_de"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="276dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="City:"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/babysitte_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_de"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="217dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="31dp"
                android:layout_toRightOf="@+id/sittercity"
                android:background="#ccccff"
                android:gravity="center"
                android:text="Montreal"
                android:textColor="#000000"
                android:textSize="18sp"

                />


            <TextView
                android:id="@+id/babysitte_des"
                android:layout_width="500dp"
                android:layout_height="80dp"
                android:layout_below="@+id/sittercity"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="description:  "
                android:textSize="18sp" />


            <TextView
                android:id="@+id/babysitter_rate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/babysitte_des"
                android:layout_alignParentStart="true"
                android:layout_marginStart="48dp"
                android:layout_marginTop="10dp"
                android:background="#ffccff"
                android:gravity="center"
                android:text="$30/hour"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/babysitter_gender"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/babysitte_des"
                android:layout_alignParentStart="true"
                android:layout_marginStart="275dp"
                android:layout_marginLeft="127dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/babysitter_rate"
                android:background="#ffccff"
                android:gravity="center"
                android:text="female"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/phone_sitter"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/babysitter_rate"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="273dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="phone:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/babysitter_ph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/babysitter_rate"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="217dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="21dp"
                android:layout_toRightOf="@+id/phone_sitter"
                android:background="#ccccff"
                android:gravity="center"
                android:text="1234567"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mail_sitter"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_sitter"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="272dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="email:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/babysitter_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/babysitter_ph"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="217dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="21dp"
                android:layout_toRightOf="@+id/phone_sitter"
                android:background="#ccccff"
                android:gravity="center"
                android:text="390248230@gmail.com"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/sitterupdateto"
                android:layout_width="256dp"
                android:layout_height="45dp"
                android:layout_below="@+id/babysitter_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="#e0e0e0"
                android:gravity="center"
                android:onClick="changeProfile"
                android:fontFamily="@font/architects_daughter"
                android:text="Update it"
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_menusitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu_sitter"
        android:background="#ccccff"/>




</androidx.constraintlayout.widget.ConstraintLayout>
